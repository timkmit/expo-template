{
	"editor.codeActionsOnSave": {
		"source.fixAll": true,
	},
	"eslint.format.enable": true,
	"editor.defaultFormatter": "dbaeumer.vscode-eslint",
	"typescript.preferences.importModuleSpecifier": "non-relative",
	"search.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		".expo": true,
		".yarn": true,
		"node_modules": true,
	},
}
